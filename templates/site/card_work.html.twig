{# Fiche oeuvre d'art #}

{% extends 'base.html.twig' %}
{% block title %}<title>{{ work.title }} - Galerie LaPiscine</title>{% endblock %}
{% block content %}
    <section class="card_work">
        <div class="image_card_work">
            <img src="{{ asset('assets/uploads/works/' ~ work.image) }}" alt="{{ work.title }}">
        </div>
        <div class="info_work" style="padding-left:10px">
            {{ work.title }}<br>
            <span class="font-weight-bold">Artiste</span>: <a href="{{ path('card_artist', {'id':work.artist.id}) }}">{{ work.artist.name }}</a><br>
            {{ work.description }}<br>
            <a href="#"><i class="fa fa-facebook-square" ></i></a>
            <a href="#"><i class="fa fa-twitter-square"></i></a>
            <a href="#"><i class="fa fa-google-plus-square"></i></a>
            <div class="lien_contact">
                <a href="">Contactez-nous pour cette oeuvre</a>
            </div>
        </div>
    </section>

