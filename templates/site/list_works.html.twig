            <div class="list_articles">
            {# boucle for qui crée un article pour chaque work du array works #}
            {% for work in works %}
                <article class="work_article">
                    <a href="{{ path('card_work', {'id':work.id}) }}">
                        <h3>{{ work.title }}</h3>
                        <div class="image_work">
                            <img src="{{ asset('assets/uploads/works/' ~ work.image) }}" alt="photo">
                        </div>
                    </a>
                    <a class="work_link_artist" href="{{ path('card_artist', {'id':work.artist.id}) }}">{{ work.artist.name }}</a>
                </article>
            {% endfor %}
        </div>
